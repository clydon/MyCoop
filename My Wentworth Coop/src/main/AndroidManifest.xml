<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ccdevelopment.mywentworthcoop" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-feature android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".App">

        <activity
            android:name="com.ccdevelopment.mywentworthcoop.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.ccdevelopment.mywentworthcoop.HubActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.ccdevelopment.mywentworthcoop.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.ccdevelopment.mywentworthcoop.PhotoVideoActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.ccdevelopment.mywentworthcoop.JournalActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.ccdevelopment.mywentworthcoop.PeopleActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.ccdevelopment.mywentworthcoop.AssignmentsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.ccdevelopment.mywentworthcoop.ViewPagerActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden"
            android:parentActivityName="com.ccdevelopment.mywentworthcoop.MainActivity" >
            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ccdevelopment.mywentworthcoop.MainActivity" />>
            <intent-filter>
                <action android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


    </application>

</manifest>
